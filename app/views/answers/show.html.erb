<div class="min-h-screen bg-gradient-to-br from-green-900 to-teal-900 flex flex-col items-center justify-center px-4 py-8">
  <div class="max-w-6xl w-full">
    <div class="text-center mb-4">
      <div class="badge badge-lg badge-success text-xl p-4">
        残り <%= @remaining_count %>問
      </div>
    </div>

    <h1 class="text-5xl md:text-7xl font-bold text-center mb-8 text-white drop-shadow-2xl">
      答え ✨
    </h1>

    <div class="card bg-base-100 shadow-2xl mb-8">
      <figure class="p-4 md:p-8">
        <%= image_tag @photo.image, class: "rounded-2xl shadow-2xl max-h-[50vh] w-auto mx-auto object-contain" %>
      </figure>

      <div class="card-body">
        <div class="text-center py-6 bg-warning rounded-xl">
          <h2 class="text-4xl md:text-6xl font-bold text-gray-900">
            <%= @photo.name %>
          </h2>
        </div>
      </div>
    </div>

    <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
      <%= link_to quizzes_path, class: "btn btn-primary btn-lg text-2xl md:text-3xl py-6 px-12 shadow-2xl hover:scale-110 transition-transform duration-200" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 5l7 7-7 7M5 5l7 7-7 7" />
        </svg>
        次の問題へ
      <% end %>

      <%= button_to quiz_reset_path, method: :post, class: "btn btn-outline btn-accent btn-lg", data: { turbo_confirm: "本当にリセットしますか？最初からやり直します。" } do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
        </svg>
        最初からやり直す
      <% end %>
    </div>
  </div>
</div>
